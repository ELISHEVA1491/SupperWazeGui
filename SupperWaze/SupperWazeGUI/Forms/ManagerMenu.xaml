            </Grid.ColumnDefinitions>
            <Image Grid.Row="2" Grid.Column="2"  Source="~\..\..\Images\menu_icon.png" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="3">
