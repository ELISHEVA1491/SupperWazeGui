<ResourceDictionary  x:Class="SupperWazeGUI.RemoveProductFromCart"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SupperWazeGUI">
    <DataTemplate x:Key="DataTemplateCart" DataType="local:myData">
        <Grid Width="350">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="~\..\Images\location.png" Grid.Column="0" Height="20" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="{Binding ProductDescription}" HorizontalAlignment="Center" FontSize="15" Foreground="Black">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <EventSetter Event="Mouse.MouseDown" Handler="MouseRightButtonDown"/>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Grid.Column="2" Text="{Binding ProductPrice}" HorizontalAlignment="Center" FontSize="15" Foreground="Black"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>